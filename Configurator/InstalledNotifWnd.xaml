<Window x:Class="TemplePlusConfig.InstalledNotifWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplePlusConfig"
        mc:Ignorable="d"
        Title="Temple+ Installed" Height="191.576" Width="378.261" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="22,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="162">

        <Label x:Name="label" Content="Temple+ has been installed!" HorizontalAlignment="Left" Margin="0,18,-1,0" VerticalAlignment="Top" Width="329" Height="29" FontSize="15" HorizontalContentAlignment="Center" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Shortcuts have been added to the start menu &#xA;under the &quot;Temple+&quot; folder." HorizontalAlignment="Center" Margin="0,56,-1,0" VerticalAlignment="Top" Width="329" Height="47" FontSize="14" HorizontalContentAlignment="Center"/>
        <Button x:Name="button" Content="Next" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="64" Click="button_Click"/>

    </Grid>
</Window>
